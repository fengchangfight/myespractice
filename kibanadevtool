# create index with mapping and setting
PUT /test
{
  "settings": {
    "number_of_shards": 1
  },
  "mappings": {
    "properties": {
      "field1": { "type": "text" }
    }
  }
}

POST _aliases
{
  "actions": [
    {
      "add": {
        "index": "test",
        "alias": "testa"
      }
    }
  ]
}

GET /testa

# To get a list of your cluster’s aliases,
GET _alias

